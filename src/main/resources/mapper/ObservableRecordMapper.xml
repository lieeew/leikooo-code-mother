<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leikooo.codemother.mapper.ObservableRecordMapper">

    <resultMap id="BaseResultMap" type="com.leikooo.codemother.model.entity.ObservableRecord">
            <id property="id" column="id" />
            <result property="conversationId" column="conversation_id" />
            <result property="inputTokens" column="input_tokens" />
            <result property="outputTokens" column="output_tokens" />
            <result property="durationMs" column="duration_ms" />
            <result property="toolCallCount" column="tool_call_count" />
            <result property="timestamp" column="timestamp" />
    </resultMap>

    <resultMap id="RankingResultMap" type="com.leikooo.codemother.model.vo.AppRankingVO">
        <result property="appId" column="appId" />
        <result property="value" column="value" />
    </resultMap>

    <sql id="Base_Column_List">
        id,conversation_id,input_tokens,output_tokens,duration_ms,
        tool_call_count,timestamp
    </sql>

    <select id="getAppStatistics" resultType="com.leikooo.codemother.model.entity.ObservableRecord">
        SELECT
            SUM(input_tokens) as inputTokens,
            SUM(output_tokens) as outputTokens,
            SUM(duration_ms) as durationMs,
            SUM(tool_call_count) as toolCallCount
        FROM observable_record
        WHERE conversation_id = #{appId};
    </select>

    <select id="countChatsByAppId" resultType="java.lang.Long">
        SELECT COUNT(DISTINCT DATE_FORMAT(timestamp, '%Y-%m-%d %H:%i:%s'))
        FROM observable_record
        WHERE conversation_id = #{appId};
    </select>

    <select id="getRanking" resultMap="RankingResultMap">
        SELECT
            conversation_id AS appId,
            <choose>
                <when test="type == 'inputTokens'">
                    SUM(input_tokens) AS value
                </when>
                <when test="type == 'outputTokens'">
                    SUM(output_tokens) AS value
                </when>
                <when test="type == 'toolCalls'">
                    SUM(tool_call_count) AS value
                </when>
                <when test="type == 'duration'">
                    SUM(duration_ms) AS value
                </when>
                <otherwise>
                    SUM(input_tokens) + SUM(output_tokens) AS value
                </otherwise>
            </choose>
        FROM observable_record
        GROUP BY conversation_id
        ORDER BY value DESC
        LIMIT #{limit};
    </select>
</mapper>
