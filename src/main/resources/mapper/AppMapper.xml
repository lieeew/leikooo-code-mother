<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leikooo.codemother.mapper.AppMapper">

    <resultMap id="BaseResultMap" type="com.leikooo.codemother.model.entity.App">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="appName" column="appName" jdbcType="VARCHAR"/>
        <result property="cover" column="cover" jdbcType="VARCHAR"/>
        <result property="initPrompt" column="initPrompt" jdbcType="VARCHAR"/>
        <result property="codeGenType" column="codeGenType" jdbcType="VARCHAR"/>
        <result property="deployKey" column="deployKey" jdbcType="VARCHAR"/>
        <result property="priority" column="priority" jdbcType="INTEGER"/>
        <result property="editTime" column="editTime" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
        <result property="currentVersionNum" column="currentVersionNum" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,appName,cover,initPrompt,codeGenType,deployKey,
        priority,editTime,createTime,updateTime,isDelete,
        currentVersionNum,userId
    </sql>

    <select id="getAppNameById" resultType="java.lang.String">
        SELECT appName FROM app WHERE id = #{id} AND isDelete = 0;
    </select>
</mapper>
